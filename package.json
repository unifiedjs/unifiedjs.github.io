  "name": "unifiedjs.com",
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "private": true,
  "repository": "unifiedjs/unifiedjs.github.io",
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "crawl:ecosystem": "mkdir -p data; mkdir -p data/readme; node crawl/ecosystem.js --conditions development",
    "crawl:opencollective": "mkdir -p data; node crawl/opencollective.js --conditions development",
    "crawl:github": "mkdir -p data; node crawl/github-sponsors.js --conditions development",
    "crawl:team": "mkdir -p data; node crawl/team.js --conditions development",
    "crawl": "npm run crawl:opencollective && npm run crawl:github && npm run crawl:team && npm run crawl:ecosystem",
    "format": "remark . --output --quiet && prettier . --log-level warn --write && stylelint \"**/*.css\" --fix && xo --fix",
    "generate:asset": "node generate/asset.js --conditions development",
    "generate:pages": "node generate/index.js --conditions development",
    "generate": "npm run generate:asset && npm run generate:pages",
    "test": "npm run format && npm run crawl && npm run generate"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "no-descending-specificity": null
    }
  },
  "typeCoverage": {
    "atLeast": 100,
    "strict": true
  },
  "type": "module",
  "version": "1.0.0",
  "xo": {
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/array-type": [
            "error",
            {
              "default": "generic"
            }
          ],
          "@typescript-eslint/ban-types": [
            "error",
            {
              "extendDefaults": true
            }
          ],
          "@typescript-eslint/consistent-type-definitions": [
            "error",
            "interface"
          ]
        }
      }
    ],
    "prettier": true,
    "rules": {
      "complexity": "off",
      "no-await-in-loop": "off",
      "unicorn/no-process-exit": "off",
      "unicorn/prefer-top-level-await": "off",
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "src": false
          }
        }
      ],
      "unicorn/prefer-query-selector": "off"
    }
  }
}
