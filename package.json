{
  "name": "unified",
  "version": "2.0.0",
  "description": "Official website for the unified ecosystem",
  "license": "MIT",
  "keywords": [
    "process",
    "design",
    "system",
    "rehype",
    "retext",
    "remark"
  ],
  "homepage": "https://unified.js.org",
  "repository": "unifiedjs/unifiedjs.github.io",
  "bugs": "https://github.com/unifiedjs/unifiedjs.github.io/issues",
  "author": "John Otander <johnotander@gmail.com> (http://johnotander.com)",
  "contributors": [
    "John Otander <johnotander@gmail.com> (http://johnotander.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "dependencies": {
    "@mdx-js/mdx": "^0.16.0",
    "@mdx-js/runtime": "^0.16.0",
    "@mdx-js/tag": "^0.16.0",
    "@reach/menu-button": "^0.1.7",
    "core-js": "^2.5.7",
    "dotenv": "^6.1.0",
    "gatsby": "^2.0.40",
    "gatsby-mdx": "^0.2.0",
    "gatsby-plugin-manifest": "^2.0.7",
    "gatsby-plugin-offline": "^2.0.12",
    "gatsby-plugin-react-helmet": "^3.0.1",
    "gatsby-source-graphql": "^2.0.6",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-helmet": "^5.2.0",
    "styled-components": "^4.0.3",
    "styled-system": "^3.1.11",
    "system-components": "^3.0.2",
    "unified-ui": "0.0.2-23"
  },
  "scripts": {
    "format": "remark . -qfo && prettier \"**/*.js\" --write && xo --fix",
    "develop": "gatsby develop",
    "build": "gatsby build",
    "start": "npm run develop",
    "test": "npm run format && npm run build"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "extends": [
      "xo-react"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-unassigned-import": "off",
      "unicorn/filename-case": "off",
      "react/jsx-pascal-case": "off",
      "camelcase": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "validate-links",
        false
      ]
    ]
  },
  "devDependencies": {
    "eslint-config-xo-react": "^0.17.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "xo": "^0.23.0"
  }
}
