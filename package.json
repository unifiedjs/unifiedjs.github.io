    "retext-profanities": "^5.0.0",
    "retext-readability": "^5.0.0",
    "retext-simplify": "^5.0.0",
    "retext-spell": "^3.0.0",
    "retext-syntax-mentions": "^1.0.0",
    "strip-comments": "^1.0.0",
    "stylelint": "^10.0.0",
    "stylelint-config-standard": "^18.0.0",
    "svgo": "^1.0.0",
    "tinyify": "^2.0.0",
    "to-vfile": "^6.0.0",
