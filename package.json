{
  "name": "unified",
  "version": "2.0.0",
  "description": "Official website for the unified ecosystem",
  "license": "MIT",
  "keywords": [
    "process",
    "design",
    "system",
    "rehype",
    "retext",
    "remark"
  ],
  "homepage": "https://unified.js.org",
  "repository": "unifiedjs/unifiedjs.github.io",
  "bugs": "https://github.com/unifiedjs/unifiedjs.github.io/issues",
  "author": "John Otander <johnotander@gmail.com> (http://johnotander.com)",
  "contributors": [
    "John Otander <johnotander@gmail.com> (http://johnotander.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Christian Murphy christian.murphy.42@gmail.com>"
  ],
  "dependencies": {
    "@mdx-js/mdx": "^1.5.1",
    "@mdx-js/react": "^1.5.1",
    "@mdx-js/runtime": "^1.5.1",
    "core-js": "^3.3.5",
    "gatsby": "^2.17.6",
    "gatsby-plugin-manifest": "^2.2.25",
    "gatsby-plugin-mdx": "^1.0.54",
    "gatsby-plugin-offline": "^3.0.17",
    "gatsby-plugin-react-helmet": "^3.1.13",
    "gatsby-source-graphql": "^2.1.21",
    "is-url": "^1.2.4",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-helmet": "^5.2.1",
    "styled-components": "^4.4.0",
    "styled-system": "^5.1.2",
    "unified-ui": "0.0.3"
  },
  "scripts": {
    "format": "remark . -qfo && prettier \"**/*.js\" --write && xo --fix",
    "develop": "gatsby develop",
    "build": "gatsby build",
    "start": "npm run develop",
    "test": "npm run format && npm run build"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "extends": [
      "xo-react"
    ],
    "parser": "babel-eslint",
    "rules": {
      "import/no-unassigned-import": "off",
      "unicorn/filename-case": "off",
      "react/jsx-pascal-case": "off",
      "camelcase": "off"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm",
      [
        "validate-links",
        false
      ]
    ]
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint-config-xo-react": "^0.20.0",
    "prettier": "^1.18.2",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.1",
    "xo": "^0.25.3"
  }
}
